
.zhimiContainer{
  height: 100%;
  padding: 0 20rpx;
}

.rootUser{
  display: flex;
  line-height: 50rpx;
  height: 50rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
}
text{
  margin-top: 10rpx;
}
.input{
  flex: 1;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  height: 30rpx;
  padding: 10rpx 20rpx;
  margin: 0 10rpx;
}

.line{
  width: 100%;
  background: #222;
  height: 2rpx;
  margin-top: 30rpx;
}

/*  输入灯谜区 */
.riddleContainer{
  display: flex;
  margin-top: 30rpx;
}
label{
  width: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
}

.inputRiddle{
  border: 2rpx solid #cdc;
  height: 100rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}
button{
  margin-top: 30rpx;
}
/* 作品区 */
.title{
  margin-top: 20rpx;
  font-size: 30rpx;
}
.riddle{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  line-height: 50rpx;
  font-size: 30rpx;
  margin: 10rpx 0rpx 20rpx 0rpx;
}
.mihao{
  background: #cecece;
  border-radius: 10rpx;
  border: solid 1rpx #ccc;
  line-height: 50rpx;
  font-size: 30rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
  padding: 0rpx 15rpx;
}
.vote{
  position: absolute; /*要约束所在位置的子元素的位置要设置成绝对 */
  right: 30rpx; 
}
.votes{
  position: relative;
  top: 20rpx;
  left: 28rpx;
  font-size: 20rpx;
  color: #959595;
}
.iconfont{
  color: #f00;
}

.div{
  width: 100%;
  height: 1rpx;
  background: #cecece;
}
