<view class="container">
  <form class="form" bindsubmit="register">
    <view>谜号</view>
    <input type="text" placeholder="请输入谜号" required="" name="username" value="{{name}}"/>
    <view>密码</view>
    <input password placeholder="请输入密码" required="" name="password" value="{{user_pwds}}"/>
    <view>年龄</view>
    <input type="number" placeholder="年龄（数字,可为空）" maxlength="2" name="age" value="{{age}}"/>
    <view>性别</view>
    <input type="number" placeholder="性别（1男 2女,可为空）" maxlength="1" name="gender" value="{{gender}}"/>
    <view>手机号</view>
    <input type="number" placeholder="11位手机号（可为空）" maxlength="11" name="phone" value="{{phone}}"/>
    <view class="btn-area">
        <button type="primary" formType="submit">注册</button>
        <button formType="reset">重填</button>
    </view>
  </form>
</view>
<view>
   <navigator wx:if="{{false}}" hover-class="none" class="toLogin" url="../logins/logins">去登录</navigator>
</view>