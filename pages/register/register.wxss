.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 0 10rpx 0;
  box-sizing: border-box;
}
.form{
  display: flex;
  align-items: center;
  justify-content: center; 
  font-size: 40rpx;
}

input{
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  margin: 10rpx 0;
  padding: 8rpx;
}
button{
  margin-top: 40rpx;
}
.toLogin{ 
  padding-right: 50rpx;
  display: flex;
  justify-content:flex-end;
  font-size: 30rpx;
}