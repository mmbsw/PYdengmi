
.header{
  display: flex;
  width: 100%;
}

.iconfont{
  flex: 1;
  height: 150rpx;
  line-height: 150rpx;
  font-size: 60rpx;
  background: #cec;
  text-align: center;
  border-radius: 20rpx;
  margin: 10rpx;
}
.line{
  margin-top: 20rpx;
  background: #000;
  width: 100%;
  height: 2rpx;
}
.selectContainer{
 margin: 20rpx;
}
.title{
  font-size: 40rpx;
  line-height: 40rpx;
  height: 50rpx;
}
.radio-group{
  margin-top: 20rpx;
  display: flex;
  text-align: center;
  line-height: 50rpx;
  font-size: 40rpx;
}
.radio-item{
  flex: 1;
}
.search{
  margin: 20rpx 0rpx 0rpx 30rpx;
  display: flex;
  height: 100rpx;
  align-items: center;
}
.search-item{
  padding: 10rpx;
  border: 1rpx solid #939393;
  border-radius: 10rpx;
  width: 500rpx;
}

.recommend{
  margin: 20rpx;
}

.left{
  font-size: 40rpx;
  line-height: 50rpx;
}
.right{
  position: absolute; 
  right: 30rpx;
  font-size: 25rpx;
  border: 1rpx solid #000;
  border-radius: 15rpx;
  padding: 0 10rpx;
}

.recommendList{
  font-size: 30rpx;
  margin-top: 20rpx;
}
.item{
  text-align: center;
  background: #cec;
  border-radius: 20rpx;

}
.riddleItem{
  font-size: 40rpx;
  line-height: 60rpx;
  height: 60rpx;
  margin-left: 40rpx;
  /* 单行文本溢出 */
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
